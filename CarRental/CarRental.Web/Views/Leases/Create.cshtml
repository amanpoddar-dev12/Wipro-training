@using CarRental.Web.Models
@{
    var cars = (List<Vehicle>)ViewBag.Cars;
}
<h2>Create Lease</h2>
<form asp-action="Create" method="post">
    <div class="mb-3"><label>Customer Id</label><input name="customerId" class="form-control" /></div>
    <div class="mb-3">
        <label>Car</label>
        <select class="form-select" name="carId">
            @foreach (var c in cars)
            {
                <option value="@c.VehicleId">@c.Make @c.Model (@c.Year)</option>
            }
        </select>
    </div>
    <div class="mb-3"><label>Start</label><input type="date" name="startDate" class="form-control" /></div>
    <div class="mb-3"><label>End</label><input type="date" name="endDate" class="form-control" /></div>
    <div class="mb-3">
        <label>Type</label>
        <select class="form-select" name="type">
            <option value="0">Daily</option>
            <option value="1">Monthly</option>
        </select>
    </div>
    <button class="btn btn-primary">Create</button>
</form>
