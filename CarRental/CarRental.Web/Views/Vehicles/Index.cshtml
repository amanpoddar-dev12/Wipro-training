@model List<CarRental.Web.Models.Vehicle>
<h2>Available Cars</h2>
<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
    {
        <a class="btn btn-primary" asp-action="Create">Add Car</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Rate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Make</td>
                <td>@c.Model</td>
                <td>@c.Year</td>
                <td>@c.DailyRate</td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@c.VehicleId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
